@model IEnumerable<TJRJ.ViewModels.LivroViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Assuntos</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-sm btn-success">Cadastrar</a>
</p>
<table class="table table-striped table-condensed table-bordered">
    <thead>
        <tr align="center">
            <th>@Html.DisplayNameFor(model => model.Cod)</th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoPublicacao)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td align="center">@item.Cod</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.Editora)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.Edicao)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.AnoPublicacao)
                </td>
                <td align="center">
                    <a asp-action="Edit" asp-route-id="@item.Cod" class="btn btn-xs btn-info">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Cod" class="btn btn-xs btn-warning">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Cod" class="btn btn-xs btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
