@model TJRJ.ViewModels.LivroViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h4>Cadastrar Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Editora" class="control-label"></label>
                <input asp-for="Editora" class="form-control" />
                <span asp-validation-for="Editora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edicao" class="control-label"></label>
                <input asp-for="Edicao" class="form-control" type="number"/>
                <span asp-validation-for="Edicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoPublicacao" class="control-label"></label>
                <input asp-for="AnoPublicacao" class="form-control" />
                <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" id="preco" class="form-control" type="number" min="0.00" max="10000.00" step="0.01" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            @Html.Label("Autores")<br />
            <div class="form-group">
                <select asp-for="LivroAutores" id="LivroAutores" asp-items="ViewBag.LivroAutores" multiple="multiple" class="listbox">
                </select>
            </div>
            @Html.Label("Assuntos")<br />
            <div class="form-group">
                <select asp-for="LivroAssuntos" id="LivroAssuntos" asp-items="ViewBag.LivroAssuntos" multiple="multiple" class="listbox">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Voltar</a>
            </div>
        </form>
    </div>
</div>

