@using TJRJ.Entities
@model TJRJ.ViewModels.LivroViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";

    var autoresList = ViewBag.LivroAutores as List<Autor>;
    var selectedAutores = Model.LivroAutores.Select(la => la.AutorCodAu).ToList();

    var assuntosList = ViewBag.LivroAssuntos as List<Assunto>;
    var selectedAssuntos = Model.LivroAssuntos.Select(la => la.AssuntoCodAs).ToList();
}

<h1>Editar Livro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cod" />
            <div class="form-group">
                <label asp-for="Cod" class="control-label"></label>
                <input asp-for="Cod" class="form-control" readonly/>
                <span asp-validation-for="Cod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Editora" class="control-label"></label>
                <input asp-for="Editora" class="form-control" />
                <span asp-validation-for="Editora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edicao" class="control-label"></label>
                <input asp-for="Edicao" class="form-control" />
                <span asp-validation-for="Edicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoPublicacao" class="control-label"></label>
                <input asp-for="AnoPublicacao" class="form-control" />
                <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" type="currency"  min="0.00" max="10000.00" step="0.01" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("Autores")<br />
                <select id="autores" name="autores" multiple="multiple" class="form-control listbox">
                    @foreach (var autor in autoresList)
                    {
                        <!option value="@autor.CodAu" @(selectedAutores.Contains(autor.CodAu) ? "selected" : "")>@autor.Nome</!option>
                    }
                </select>
            </div>
            <div class="form-group">
                @Html.Label("Assuntos")<br />
                <select id="assuntos" name="assuntos" class="form-control">
                    @foreach (var assunto in assuntosList)
                    {
                        <!option value="@assunto.CodAs" @(selectedAutores.Contains(assunto.CodAs) ? "selected" : "")>@assunto.Descricao</!option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Voltar</a>
            </div>
        </form>
    </div>
</div>

